{
  "name": "@locol23/renovate-config",
  "version": "1.0.0",
  "description": "Shareable config for Renovate",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "test": "renovate-config-validator"
  },
  "homepage": "https://github.com/locol23/renovate-config",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/locol23/renovate-config.git"
  },
  "bugs": {
    "url": "https://github.com/locol23/renovate-config/issues"
  },
  "keywords": [
    "npm",
    "renovate"
  ],
  "author": "locol23 <locol6622@gmail.com>",
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":timezone(Asia/Tokyo)"
      ],
      "npm": {
        "labels": [
          "renovate"
        ],
        "minor": {
          "groupName": "all minor dependencies"
        },
        "patch": {
          "automerge": true,
          "groupName": "all patch dependencies"
        }
      }
    }
  },
  "devDependencies": {
    "husky": "4.3.8",
    "lint-staged": "11.2.6",
    "prettier": "2.2.1",
    "renovate": "31.11.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,json}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  }
}
