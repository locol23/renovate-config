{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Asia/Tokyo)",
    ":semanticCommits",
    ":rebaseStalePrs",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "helpers:disableTypesNodeMajor"
  ],
  "schedule": ["after 9pm", "before 9am"],
  "dependencyDashboard": true,
  "minimumReleaseAge": "7 days",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": ["at any time"],
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Automerge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "GitHub Actions - pin digests",
      "matchManagers": ["github-actions"],
      "labels": ["CI"],
      "pinDigests": true
    },
    {
      "description": "npm packages - pin versions",
      "matchManagers": ["npm"],
      "labels": ["dependencies"],
      "rangeStrategy": "pin"
    },
    {
      "description": "Group ESLint packages",
      "groupName": "ESLint",
      "matchPackageNames": ["/^eslint/", "/^@typescript-eslint//"]
    },
    {
      "description": "Group React packages",
      "groupName": "React",
      "matchPackageNames": ["/^react/", "/^@types/react/"]
    },
    {
      "description": "Group Next.js packages",
      "groupName": "Next.js",
      "matchPackageNames": ["/^next/", "/^@next//"]
    },
    {
      "description": "Group TypeScript packages",
      "matchPackageNames": ["typescript"],
      "groupName": "TypeScript"
    }
  ]
}
