{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)",
    ":noUnscheduledUpdates",
    ":separatePatchReleases",
    ":prNotPending",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":automergeRequireAllStatusChecks",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "schedule": ["after 9pm", "before 9am"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "platformAutomerge": true,
  "rangeStrategy": "bump",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "groupName": "ESLint",
      "packagePatterns": ["^eslint", "^@typescript-eslint/"]
    },
    {
      "groupName": "renovate",
      "automerge": true,
      "packageNames": ["renovate"]
    },
    {
      "groupName": "React",
      "packagePatterns": ["^react", "^@types/react"]
    },
    {
      "groupName": "Next.js",
      "packagePatterns": ["^next", "^@next/"]
    },
    {
      "groupName": "TypeScript",
      "packagePatterns": ["^typescript", "^@types/"]
    },
    {
      "groupName": "Node.js",
      "packagePatterns": ["^@types/node"]
    },
    {
      "groupName": "Patch updates",
      "matchUpdateTypes": ["patch"],
      "addLabels": ["patch-update"],
      "automerge": true,
      "stabilityDays": 3
    },
    {
      "groupName": "Minor updates",
      "matchUpdateTypes": ["minor"],
      "addLabels": ["minor-update"],
      "automerge": true,
      "stabilityDays": 7
    },
    {
      "groupName": "DevDependencies",
      "depTypes": ["devDependencies"],
      "automerge": true,
      "minor": {
        "stabilityDays": 3
      },
      "patch": {
        "stabilityDays": 1
      }
    },
    {
      "groupName": "Major updates",
      "matchUpdateTypes": ["major"],
      "addLabels": ["major-update"],
      "automerge": false,
      "stabilityDays": 7
    },
    {
      "groupName": "Security updates",
      "matchPackagePatterns": ["*"],
      "matchCurrentVersion": "/^.*[.-](security|sec|vuln|cve).*$/",
      "automerge": true,
      "schedule": ["at any time"],
      "stabilityDays": 0
    }
  ]
}
